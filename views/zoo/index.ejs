<% include ../partials/header %>

  <h2>Your Zoos</h2>

  <button class = 'newZoo' >Add New Zoo</button>
  <br/>
  <% for (var i = 0; i < zoo.length; i++) { %>
    <div class = 'zoos'>
    Zoo Name:
    <%= zoo[i].name %>
    <br/>
    Zoo Location:
    <%= zoo[i].location %>
    <br/>
    Animals:
    <button class = 'viewZoosAnimals' data-url = '/zoos/<%=zoo[i].id%>/animals'>Zoo Animals</button>
    <br/>
    <br/>
    <button class = 'viewZoo' data-url = "/zoos/<%= zoo[i].id %>" >View Zoo</button>
    <br/>
    <button class = 'editZoo' data-url = "/zoos/<%= zoo[i].id %>/edit" >Edit Zoo</button>
    <br/>
    <button class = 'deleteZoo' data-url = '/zoos/<%=zoo[i].id%>'>Delete Zoo</button>
    </div>
  <% } %>

<% include ../partials/footer %>